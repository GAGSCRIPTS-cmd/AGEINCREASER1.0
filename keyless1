local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer

-- GUI Setup
local screenGui = Instance.new("ScreenGui", game.CoreGui)
screenGui.Name = "AgeIncreaser"
screenGui.ResetOnSpawn = false

-- Main Frame
local mainFrame = Instance.new("Frame", screenGui)
mainFrame.Size = UDim2.new(0, 250, 0, 160)
mainFrame.Position = UDim2.new(0.1, 0, 0.3, 0)
mainFrame.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
mainFrame.BorderSizePixel = 0
mainFrame.Active = true
mainFrame.Draggable = true

-- Title Label
local titleLabel = Instance.new("TextLabel", mainFrame)
titleLabel.Size = UDim2.new(1, 0, 0, 30)
titleLabel.Text = "AGE INCREASER"
titleLabel.TextColor3 = Color3.fromRGB(0, 255, 0)
titleLabel.TextScaled = true
titleLabel.BackgroundTransparency = 1
titleLabel.Font = Enum.Font.GothamBlack

-- Instruction Label
local instrLabel = Instance.new("TextLabel", mainFrame)
instrLabel.Position = UDim2.new(0, 0, 0, 30)
instrLabel.Size = UDim2.new(1, 0, 0, 25)
instrLabel.Text = "YOU NEED TO HOLD THE PETS"
instrLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
instrLabel.TextScaled = true
instrLabel.BackgroundTransparency = 1
instrLabel.Font = Enum.Font.GothamSemibold

-- Status Label
local statusLabel = Instance.new("TextLabel", mainFrame)
statusLabel.Position = UDim2.new(0, 0, 0, 120)
statusLabel.Size = UDim2.new(1, 0, 0, 20)
statusLabel.Text = "Waiting for action..."
statusLabel.TextColor3 = Color3.fromRGB(255, 0, 0)
statusLabel.TextScaled = true
statusLabel.BackgroundTransparency = 1
statusLabel.Font = Enum.Font.Gotham

-- Button
local ageButton = Instance.new("TextButton", mainFrame)
ageButton.Position = UDim2.new(0.1, 0, 0.55, 0)
ageButton.Size = UDim2.new(0.8, 0, 0.25, 0)
ageButton.Text = "AUTO AGE PET TO 50"
ageButton.TextColor3 = Color3.fromRGB(0, 0, 0)
ageButton.BackgroundColor3 = Color3.fromRGB(0, 255, 0)
ageButton.TextScaled = true
ageButton.Font = Enum.Font.GothamBlack

-- Aging Logic
local aging = false

local function getHeldTool()
    if LocalPlayer.Character then
        for _, item in ipairs(LocalPlayer.Character:GetChildren()) do
            if item:IsA("Tool") then
                return item
            end
        end
    end
    return nil
end

local function simulateAging(tool)
    local petAgeValue = tool:FindFirstChild("Age")
    if petAgeValue and petAgeValue:IsA("IntValue") then
        aging = true
        while aging and petAgeValue.Value < 50 do
            petAgeValue.Value = petAgeValue.Value + 1
            statusLabel.Text = "Pet Age: " .. petAgeValue.Value
            wait(0.3)
        end
        if petAgeValue.Value >= 50 then
            statusLabel.Text = "YOU NEED TO WAIT 3-5 MINUTES BEFORE REJOINING"
        end
        aging = false
    else
        statusLabel.Text = "No valid pet age found!"
    end
end

ageButton.MouseButton1Click:Connect(function()
    if aging then return end
    local tool = getHeldTool()
    if tool then
        simulateAging(tool)
    else
        statusLabel.Text = "No held pet found!"
    end
end)
