-- AGE INCREASER GUI - Made by GROW A GARDEN SCRIPTERS
-- Host this on GitHub and use as loadstring for best compatibility

local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local PlayerGui = LocalPlayer:WaitForChild("PlayerGui")
local RunService = game:GetService("RunService")

-- Remove old GUI if re-run
if PlayerGui:FindFirstChild("AgeGUI") then
    PlayerGui.AgeGUI:Destroy()
end

-- GUI Creation
local gui = Instance.new("ScreenGui", PlayerGui)
gui.Name = "AgeGUI"
gui.ResetOnSpawn = false

local main = Instance.new("Frame", gui)
main.Size = UDim2.new(0, 250, 0, 170)
main.Position = UDim2.new(0.3, 0, 0.3, 0)
main.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
main.BorderSizePixel = 0
main.Active = true
main.Draggable = true

local title = Instance.new("TextLabel", main)
title.Size = UDim2.new(1, 0, 0, 30)
title.Position = UDim2.new(0, 0, 0, 0)
title.BackgroundTransparency = 1
title.Text = "AGE INCREASER"
title.TextColor3 = Color3.fromRGB(0, 255, 0)
title.TextStrokeTransparency = 0
title.Font = Enum.Font.FredokaOne
title.TextSize = 22

local holdReminder = Instance.new("TextLabel", main)
holdReminder.Size = UDim2.new(1, 0, 0, 25)
holdReminder.Position = UDim2.new(0, 0, 0, 35)
holdReminder.BackgroundTransparency = 1
holdReminder.Text = "YOU NEED TO HOLD THE PETS"
holdReminder.TextColor3 = Color3.fromRGB(255, 255, 255)
holdReminder.Font = Enum.Font.FredokaOne
holdReminder.TextSize = 16

local autoButton = Instance.new("TextButton", main)
autoButton.Size = UDim2.new(1, -20, 0, 50)
autoButton.Position = UDim2.new(0, 10, 0, 70)
autoButton.BackgroundColor3 = Color3.fromRGB(0, 255, 0)
autoButton.Text = "AUTO AGE PET TO 50"
autoButton.Font = Enum.Font.FredokaOne
autoButton.TextSize = 20
autoButton.TextColor3 = Color3.fromRGB(0, 0, 0)
autoButton.TextWrapped = true

local statusLabel = Instance.new("TextLabel", main)
statusLabel.Size = UDim2.new(1, -20, 0, 30)
statusLabel.Position = UDim2.new(0, 10, 0, 130)
statusLabel.BackgroundTransparency = 1
statusLabel.Text = ""
statusLabel.TextColor3 = Color3.fromRGB(255, 0, 0)
statusLabel.Font = Enum.Font.FredokaOne
statusLabel.TextSize = 18

-- Function to find held pet/tool
local function getHeldPet()
    for _, tool in ipairs(LocalPlayer.Character:GetChildren()) do
        if tool:IsA("Tool") and tool:FindFirstChild("Age") then
            return tool
        end
    end
    return nil
end

-- Function to auto age
local aging = false

local function startAging()
    if aging then return end
    local heldPet = getHeldPet()
    if not heldPet then
        statusLabel.Text = "No held pet found!"
        return
    end

    aging = true
    statusLabel.Text = "Aging in progress..."

    local ageValue = heldPet:FindFirstChild("Age")

    while ageValue and ageValue.Value < 50 and aging do
        ageValue.Value = ageValue.Value + 1
        statusLabel.Text = "Pet age: " .. tostring(ageValue.Value)
        task.wait(0.2)
    end

    if ageValue and ageValue.Value >= 50 then
        statusLabel.Text = "YOU NEED TO WAIT 3-5 MINUTES BEFORE REJOINING"
    end

    aging = false
end

autoButton.MouseButton1Click:Connect(startAging)
